<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="root"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.game.dungeons_breath.MainViewController">

  <!-- background image -->
  <ImageView fx:id="bgImageView" preserveRatio="false" smooth="true">
    <image>
      <Image url="@images/dungeons_breath_background.jpg" />
    </image>
  </ImageView>

  <!-- overlay content (your previous VBox) -->
  <VBox alignment="CENTER"
    spacing="20.0">
    <Button text="Start" onAction="#onStartButtonClick" />
    <Button text="Exit" onAction="#onExitButtonClick" />
  </VBox>

</StackPane>